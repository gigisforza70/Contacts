<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_header_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/contact_padding_top"
    android:paddingBottom="2dp"
    android:paddingLeft="@dimen/contact_padding_left"
    android:paddingRight="@dimen/contact_padding_left"
    android:background="?attr/selectableItemBackground">

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/contact_header_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        tools:text="@string/groups" />

    <ImageView
        android:id="@+id/contact_header_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:alpha="0.8"
        android:layout_alignParentEnd="true"
        tools:srcCompat="@drawable/ic_people_rounded" />

</RelativeLayout>
